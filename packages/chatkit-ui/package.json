{
  "name": "@xpert-ai/chatkit-ui",
  "version": "0.0.1",
  "description": "React bindings for the ChatKit Web Component.",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "dependencies": {
    "@langchain/core": "^1.0.2",
    "@langchain/langgraph-sdk": "^1.0.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-tooltip": "^1.1.20",
    "@xpert-ai/chatkit-types": "workspace:*",
    "clsx": "^2.1.1",
    "framer-motion": "^12.4.9",
    "katex": "^0.16.21",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.476.0",
    "nuqs": "^2.4.1",
    "react-markdown": "^10.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest",
    "types": "tsc",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xpert-ai/chatkit-js"
